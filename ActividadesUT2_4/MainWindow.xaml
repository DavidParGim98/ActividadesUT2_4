<Window x:Class="ActividadesUT2_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActividadesUT2_4"
        mc:Ignorable="d"
        Title="Cuenta Letras" Height="450" Width="800"
        
        >
    <Window.Background>
        <LinearGradientBrush>
            <LinearGradientBrush.GradientStops>
                <GradientStop Offset="0.0" 
                        Color="{DynamicResource {x:Static SystemColors.DesktopColorKey}}" />
                <GradientStop Offset="1.0" 
                        Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBox x:Name="CajonTexto" MaxLength="140" AcceptsReturn="True" TextChanged="ComprobarLetras" Text="" Margin="50,50,50,50" />
        <TextBlock x:Name="CuentaLetras" FontSize="25"  Margin="616,374,50,10" />
    </Grid>
</Window>
